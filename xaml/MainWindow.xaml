<Window
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    Height="300" Width="700"
    Background="#57697f"
    Title = "NetPro">

    <Grid Margin="5">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="Auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- Adapter column -->
        <StackPanel Grid.Column="0">
            <Label Content="Select Adapter" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5"/>
            <ListBox x:Name="selectAdapter" Margin="5" Height="170" Width="160"/>
            <Button x:Name="reload" Content="Refresh Adapters" HorizontalAlignment="Stretch" Margin="5" Padding="5"/>
        </StackPanel>
        
        <!-- Properties column -->
        <StackPanel Grid.Column="1" x:Name="adapterOptions">
            <Label Content="Properties" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5"/>
            
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>

                <!-- Set Interface Mode -->
                <Label Grid.Row="0" Grid.Column="0" Content="Set Interface Mode" Foreground="White" Margin="5"/>
                <StackPanel Grid.Row="0" Grid.Column="1" Orientation="Horizontal" VerticalAlignment="Center">
                    <RadioButton Content="DHCP" x:Name="dhcpOption" Foreground="White" Margin="5"/>
                    <RadioButton Content="Static" x:Name="staticOption" Foreground="White" Margin="5"/>
                </StackPanel>

                <!-- IP Address -->
                <Label Grid.Row="1" Grid.Column="0" Content="IP Address" Foreground="White" Margin="5"/>
                <TextBox Grid.Row="1" Grid.Column="1" x:Name="ipaddress" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="5"/>

                <!-- Subnet Mask -->
                <Label Grid.Row="2" Grid.Column="0" Content="Subnet Mask" Foreground="White" Margin="5"/>
                <TextBox Grid.Row="2" Grid.Column="1" x:Name="subnet_mask" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="5"/>

                <!-- Gateway -->
                <Label Grid.Row="3" Grid.Column="0" Content="Gateway" Foreground="White" Margin="5"/>
                <TextBox Grid.Row="3" Grid.Column="1" x:Name="gateway" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="5"/>

                <!-- DNS -->
                <Label Grid.Row="4" Grid.Column="0" Content="DNS" Foreground="White" Margin="5"/>
                <TextBox Grid.Row="4" Grid.Column="1" x:Name="dns" HorizontalAlignment="Stretch" HorizontalContentAlignment="Right" VerticalContentAlignment="Center" Margin="5"/>

                <!-- Static buttons -->
                <Button Grid.Row="5" Grid.Column="0" Content="Save" x:Name="saveStaticBtn" HorizontalAlignment="Stretch" Margin="5" Padding="5"/>
                <Button Grid.Row="5" Grid.Column="1" Content="Add IP Address" x:Name="addNewIPBtn" HorizontalAlignment="Stretch" Margin="5" Padding="5"/>
            </Grid>
        </StackPanel>

        <!-- Status column -->
        <StackPanel Grid.Column="2">
            <Label Content="Status" Foreground="White" FontSize="14" FontWeight="Bold" Margin="5"/>
            <TextBox x:Name="noAdapters" Visibility="Hidden" IsReadOnly="True" BorderThickness="0" TextWrapping="WrapWithOverflow" Height="100" Background="#57697f" Foreground="#ffffff">No adapters connected. Please connect an adapter and click the "Refresh Adapters" button</TextBox>
        </StackPanel>
        
    </Grid>
</Window>